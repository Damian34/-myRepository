<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.example.dami.przelicznik.MainLastActivity">

    <Button
        android:onClick="Sprawdz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:text="sprawdz"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:text=""
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/text2"
        android:onClick="waluta1"
        android:layout_marginTop="146dp"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLD"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit1"
        android:inputType="phone"
        android:digits="1234567890."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp"
        android:text=""
        android:textSize="30sp"
        android:maxLength="7" />

    <Button
        android:id="@+id/text3"
        android:onClick="waluta2"
        android:layout_marginTop="227dp"
        android:layout_marginLeft="165dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLD"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="120dp"
        android:text=""
        android:textSize="30sp" />

    <Button
        android:onClick="Odwrot"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="320dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="odwróć"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="30dp"
        android:text="dane z dnia yyyy-mmm-dd"
        android:textSize="15sp"/>

</RelativeLayout>
